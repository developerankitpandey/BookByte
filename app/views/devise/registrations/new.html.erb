<body style="font-family: Arial, sans-serif; background-color: #000; color: #fff;">

  <div class="container mt-5" style="max-width: 400px; margin: 50px auto; padding: 20px; background-color: #222; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <h2 style="text-align: center; color: #fff;">Sign Up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, style: "color: #fff;" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "background-color: #333; color: #fff;" %>
      </div>

      <div class="form-group">
        <%= f.label :password, style: "color: #fff;" %>
        <% if @minimum_password_length %>
        <em style="color: #999;">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", style: "background-color: #333; color: #fff;" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, style: "color: #fff;" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", style: "background-color: #333; color: #fff;" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-primary btn-block", style: "background-color: #008CBA; color: white;" %>
      </div>


    <% end %>

    <%= render "devise/shared/links" %>
  </div>

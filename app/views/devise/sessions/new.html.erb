 <title>Log in</title>
<body style="font-family: Arial, sans-serif; background-color: #000; color: #fff;">

  <div class="container" style="max-width: 400px; margin: 50px auto; padding: 20px; background-color: #222; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <h2 style="text-align: center; color: #fff;">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, style: "color: #fff;" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "background-color: #333; color: #fff;" %>
      </div>

      <div class="form-group">
        <%= f.label :password, style: "color: #fff;" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", style: "background-color: #333; color: #fff;" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me, class: "form-check-input", style: "margin-right: 5px;" %>
          <%= f.label :remember_me, class: "form-check-label", style: "color: #fff;" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-primary btn-block", style: "background-color: #008CBA; color: white;" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
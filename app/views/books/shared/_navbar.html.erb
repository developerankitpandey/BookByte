<nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #2c3e50;"> <!-- Set your desired dark background color -->
  <a class="navbar-brand" href="/" style="color: #ffffff;">BookByte</a>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon" style="background-color: #ffffff;"></span> <!-- Set the color of the hamburger icon -->
  </button>

  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to 'All Books', books_path, class: 'nav-link', style: 'color: #ffffff;' %>
        </li>

        <li class="nav-item">
          <%= link_to root_path, class: 'nav-link', style: 'color: #ffffff;' do %>
            <!-- Use a Font Awesome icon for the cart -->
            <i class="fas fa-shopping-cart fa-1x"></i>
            <!-- Display the cart count next to the cart icon -->
            <% cart_count = current_user.cart_items.count %>
            <% if cart_count > 0 %>
              <span class="badge bg-danger rounded-circle"><%= cart_count %></span>
            <% end %>
          <% end %>
      </li>
      <!-- Add more navigation links as needed -->
    </ul>
    
    <%= form_tag(search_books_path, method: :get, class: "form-inline my-2 my-lg-0") do %>
      <%= text_field_tag :query, params[:query], class: "form-control mr-sm-2", style: "width: 400px;", placeholder: "Search Books", aria: { label: "Search" } %>
      <%= submit_tag "Search", class: "btn btn-outline-light my-2 my-sm-0" %>
    <% end %>
    
    <ul class="navbar-nav ml-auto">
      <%= render 'books/shared/navbar_buttons' %>
    </ul>
  </div>
</nav>

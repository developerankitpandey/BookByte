<div class="container mt-5">
<% if @book.book_images.attached? %>
  <div class="book-images">
    <% @book.book_images.each do |image| %>
      <%= image_tag image, class: 'img-fluid' %>
    <% end %>
  </div>
<% end %>
  <h1 class="text-center mb-4"><%= @book.book_name %></h1>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Author: <%= @book.author_name %></h5>
      <p class="card-text">Price: <%= number_to_currency(@book.price) %></p>
    </div>
  </div>
</div>
